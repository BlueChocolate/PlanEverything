<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:PlanEverything.Controls">
    <Style TargetType="{x:Type controls:Card}">
        <Setter Property="MinHeight" Value="70" />
        <Setter Property="Background" Value="{DynamicResource ContainerBackgroundBrush}" />
        <Setter Property="TitleForeground" Value="{DynamicResource StandardForegroundBrush}" />
        <Setter Property="DescriptionForeground" Value="{DynamicResource DescriptionForegroundBrush}" />
        <Setter Property="IconFontForeground" Value="{DynamicResource StandardForegroundBrush}" />
        <Setter Property="IconFontFamily" Value="{StaticResource IconFontFamily}" />
        <Setter Property="IconFontSize" Value="20" />
        <Setter Property="IconHeight" Value="30" />
        <Setter Property="IconWidth" Value="30" />
        <Setter Property="IconMinHeight" Value="60" />
        <Setter Property="IconMinWidth" Value="60" />
    </Style>
</ResourceDictionary>