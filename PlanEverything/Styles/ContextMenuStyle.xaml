<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pu="https://opensource.panuon.com/wpf-ui">
    <Style BasedOn="{StaticResource {x:Static pu:StyleKeys.ContextMenuStyle}}" TargetType="ContextMenu">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#CCFFFFFF" />
        <Setter Property="BorderBrush" Value="{DynamicResource MainColor}" />
        <Setter Property="pu:ContextMenuHelper.CornerRadius" Value="5" />
        <Setter Property="pu:ContextMenuHelper.ItemsCornerRadius" Value="10" />
        <Setter Property="pu:ContextMenuHelper.ItemsHoverBackground" Value="{DynamicResource ButtonHoverForeground}" />
        <Setter Property="FontSize" Value="14" />
    </Style>
</ResourceDictionary>