<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pu="https://opensource.panuon.com/wpf-ui">
    <Style
        x:Key="OptionsDropDownStyle"
        BasedOn="{StaticResource {x:Static pu:StyleKeys.DropDownStyle}}"
        TargetType="pu:DropDown">
        <Setter Property="pu:ShadowHelper.Opacity" Value="0" />
        <Setter Property="pu:ShadowHelper.BlurRadius" Value="0" />
        <Setter Property="pu:DropDownHelper.Padding" Value="5" />
        <Setter Property="pu:DropDownHelper.Background" Value="{DynamicResource InputBackgroundBrush}" />
        <Setter Property="pu:DropDownHelper.BorderBrush" Value="{DynamicResource BorderBrush}" />
        <Setter Property="pu:DropDownHelper.BorderThickness" Value="1" />
        <Setter Property="pu:DropDownHelper.ShadowColor" Value="Transparent" />
        <Setter Property="pu:DropDownHelper.Width" Value="150" />
        <Setter Property="pu:DropDownHelper.CornerRadius" Value="5" />
        <Setter Property="pu:DropDownHelper.ClipDockSideShadow" Value="False" />
        <Setter Property="pu:DropDownHelper.VerticalOffset" Value="5" />
    </Style>
</ResourceDictionary>