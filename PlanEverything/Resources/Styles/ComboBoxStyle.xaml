<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pu="https://opensource.panuon.com/wpf-ui">
    <Style BasedOn="{StaticResource {x:Static pu:StyleKeys.ComboBoxStyle}}" TargetType="ComboBox">
        <Setter Property="Height" Value="30" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="pu:ComboBoxHelper.CornerRadius" Value="0" />
        <Setter Property="pu:ComboBoxHelper.FocusedBorderBrush" Value="{DynamicResource MainColor}" />
        <Setter Property="pu:ComboBoxHelper.HoverBorderBrush" Value="{DynamicResource MainColor}" />
        <Setter Property="pu:ComboBoxHelper.ItemsHoverBackground" Value="{DynamicResource HoverBackground}" />
        <Setter Property="pu:ComboBoxHelper.ItemsSelectedBackground" Value="{DynamicResource MainColor}" />
        <Setter Property="pu:ShadowHelper.Opacity" Value="0" />
        <Setter Property="Background" Value="{DynamicResource BodyBackground}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="{DynamicResource BodyForeground}" />
    </Style>
</ResourceDictionary>