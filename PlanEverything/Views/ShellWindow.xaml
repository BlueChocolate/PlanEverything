    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pu="https://opensource.panuon.com/wpf-ui"
    Width="800"
    Height="600"
    MinWidth="800"
    MinHeight="450"
    Background="{DynamicResource BodyBackground}"
    FontSize="20"
    Foreground="{DynamicResource BodyForeground}"
    mc:Ignorable="d">
    <pu:WindowXCaption.HeaderTemplate>
        <DataTemplate>
            <Label
                Margin="10,10,0,0"
                Content="一切按计划进行 v0.0.1"
                FontFamily="Smiley Sans"
                Style="{DynamicResource MediumLabelStyle}" />
        </DataTemplate>
    </pu:WindowXCaption.HeaderTemplate>
    <pu:WindowX.Resources>
        <!--  基本控件样式  -->
        <ResourceDictionary>
            <Style
                x:Key="LargeLabelStyle"
                BasedOn="{StaticResource {x:Static pu:StyleKeys.LabelStyle}}"
                TargetType="Label">
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontSize" Value="30" />
                <Setter Property="Foreground" Value="{DynamicResource BodyForeground}" />
                <Setter Property="Background" Value="Transparent" />
            </Style>
            <Style
                x:Key="MediumLabelStyle"
                BasedOn="{StaticResource {x:Static pu:StyleKeys.LabelStyle}}"
                TargetType="Label">
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="Foreground" Value="{DynamicResource BodyForeground}" />
                <Setter Property="Background" Value="Transparent" />
            </Style>
            <Style
                x:Key="SmallLabelStyle"
                BasedOn="{StaticResource {x:Static pu:StyleKeys.LabelStyle}}"
                TargetType="Label">
                <Setter Property="Padding" Value="0" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Foreground" Value="{DynamicResource BodyForeground}" />
                <Setter Property="Background" Value="Transparent" />
            </Style>

            <Style BasedOn="{StaticResource {x:Static pu:StyleKeys.RadioButtonStyle}}" TargetType="RadioButton">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Foreground" Value="{DynamicResource BodyForeground}" />
                <Setter Property="pu:RadioButtonHelper.CheckedForeground" Value="{DynamicResource MainColor}" />
                <Setter Property="pu:RadioButtonHelper.CheckedToggleBrush" Value="{DynamicResource MainColor}" />
            </Style>

            <Style BasedOn="{StaticResource {x:Static pu:StyleKeys.ComboBoxStyle}}" TargetType="ComboBox" />
        </ResourceDictionary>
    </pu:WindowX.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <pu:Drawer
            Grid.Column="0"
            MinWidth="100"
            MaxWidth="200">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Rectangle pu:WindowX.IsDragMoveArea="True" Fill="Transparent" />
            </Grid>
        </pu:Drawer>
    </Grid>

